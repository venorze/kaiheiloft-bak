<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.amaoai</groupId>
    <artifactId>root-module</artifactId>
    <version>v1.0.0.KAYLE</version>
    <packaging>pom</packaging>

    <modules>
        <module>open-module-libs/project-devtools-libs</module>
        <module>open-module-libs/spring-boot-libs</module>
        <module>open-module-libs/spring-cloud-alibaba-libs</module>
        <module>kaiheiloft</module>
        <module>sdk</module>
        <module>opensso</module>
        <module>export</module>
        <module>route</module>
        <module>msrv</module>
        <module>stream-mediasrv</module>
        <!-- test -->
        <module>test/msrv-client-test</module>
    </modules>

    <properties>
        <junit.version>4.13.2</junit.version>
        <maven-compiler-plugin.version>3.10.1</maven-compiler-plugin.version>
        <lombok.version>1.18.24</lombok.version>
        <netty.version>4.1.87.Final</netty.version>
        <kotlin.version>1.8.20-Beta</kotlin.version>
    </properties>

    <dependencies>
        <!-- junit -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${junit.version}</version>
            <scope>test</scope>
        </dependency>
        <!-- lombok -->
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>${lombok.version}</version>
            <scope>compile</scope>
        </dependency>
        <!-- kotlin -->
        <dependency>
            <groupId>org.jetbrains.kotlin</groupId>
            <artifactId>kotlin-stdlib-jdk8</artifactId>
            <version>${kotlin.version}</version>
        </dependency>
        <dependency>
            <groupId>org.jetbrains.kotlin</groupId>
            <artifactId>kotlin-test</artifactId>
            <version>${kotlin.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <dependencyManagement>
        <dependencies>
            <!-- third party -->
            <dependency>
                <groupId>io.netty</groupId>
                <artifactId>netty-all</artifactId>
                <version>${netty.version}</version>
            </dependency>
            <!-- project-devtools-libs -->
            <dependency>
                <groupId>com.amaoai</groupId>
                <artifactId>project-devtools-libs</artifactId>
                <version>v1.0.0.KAYLE</version>
            </dependency>
            <!-- spring-boot-libs -->
            <dependency>
                <groupId>com.amaoai</groupId>
                <artifactId>boot-starter-hibernate-validator</artifactId>
                <version>v1.0.0.KAYLE</version>
            </dependency>
            <dependency>
                <groupId>com.amaoai</groupId>
                <artifactId>boot-starter-mysql</artifactId>
                <version>v1.0.0.KAYLE</version>
            </dependency>
            <dependency>
                <groupId>com.amaoai</groupId>
                <artifactId>boot-starter-redis</artifactId>
                <version>v1.0.0.KAYLE</version>
            </dependency>
            <dependency>
                <groupId>com.amaoai</groupId>
                <artifactId>boot-starter-rocketmq</artifactId>
                <version>v1.0.0.KAYLE</version>
            </dependency>
            <dependency>
                <groupId>com.amaoai</groupId>
                <artifactId>boot-starter-web</artifactId>
                <version>v1.0.0.KAYLE</version>
            </dependency>
            <!-- spring-cloud-alibaba-libs -->
            <dependency>
                <groupId>com.amaoai</groupId>
                <artifactId>cloud-starter-feign</artifactId>
                <version>v1.0.0.KAYLE</version>
            </dependency>
            <dependency>
                <groupId>com.amaoai</groupId>
                <artifactId>cloud-starter-nacos</artifactId>
                <version>v1.0.0.KAYLE</version>
            </dependency>
            <!-- export -->
            <dependency>
                <groupId>com.amaoai</groupId>
                <artifactId>export-module-kaiheiloft</artifactId>
                <version>v1.0.0.KAYLE</version>
            </dependency>
            <dependency>
                <groupId>com.amaoai</groupId>
                <artifactId>export-module-opensso</artifactId>
                <version>v1.0.0.KAYLE</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven-compiler-plugin.version}</version>
                <configuration>
                    <source>17</source>
                    <target>17</target>
                    <encoding>UTF-8</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.jetbrains.kotlin</groupId>
                <artifactId>kotlin-maven-plugin</artifactId>
                <version>${kotlin.version}</version>
                <executions>
                    <execution>
                        <id>compile</id>
                        <phase>compile</phase>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>test-compile</id>
                        <phase>test-compile</phase>
                        <goals>
                            <goal>test-compile</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <jvmTarget>17</jvmTarget>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>